{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "mocha/no-exclusive-tests": "error"
  }
}
